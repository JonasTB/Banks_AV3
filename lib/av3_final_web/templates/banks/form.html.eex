<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <%= label f, :revenue %>
  <%= number_input f, :revenue, step: "any" %>
  <%= error_tag f, :revenue %>

  <%= label f, :outlay %>
  <%= number_input f, :outlay, step: "any" %>
  <%= error_tag f, :outlay %>

  <div>
    <%= submit "Save" %>
  </div>
<% end %>
